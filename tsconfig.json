{
  "compilerOptions": {
    "module": "ES2022",
    "target": "es2015",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "lib": ["DOM", "ES2021"]
  }
}
